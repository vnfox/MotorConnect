<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.motor.connect.feature.notification.NotificationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:layout_gravity="top"
            android:background="@drawable/card_view_style"
            android:gravity="center|left"


            android:orientation="horizontal">

            <ImageView
                android:id="@+id/action_left"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_back" />

            <TextView
                android:id="@+id/txt_title"
                style="@style/TextView.Screen.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:text="Thông Báo" />

        </LinearLayout>

        <!-- Action Bar End -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_sms_receivers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/card_view"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </LinearLayout>
</layout>