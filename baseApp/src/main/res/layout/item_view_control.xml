<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_van1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/connect_margin_5"
    android:background="@drawable/bg_view_control"
    android:gravity="center"
    android:minHeight="100dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/bg_corner_control"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="01"
            android:textColor="@color/color_text_black"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/van_id"
            style="@style/TextView.Screen.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/connect_margin_5"
            android:layout_marginTop="@dimen/connect_margin_5"
            android:text="front side"
            android:textColor="@color/color_text_white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/connect_margin_5"
            android:layout_marginTop="@dimen/connect_margin_10"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/connect_margin_5"
                android:src="@mipmap/ic_clock" />

            <TextView

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_duration_control"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/color_text_white"
                android:textSize="24sp" />

            <TextView
                style="@style/TextView.Screen.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/connect_margin_5"
                android:gravity="center"
                android:text="min"
                android:textColor="@color/color_text_white"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/color_grey" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Time Process"
            android:textColor="@color/color_text_black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>

